<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E2000000"
    android:layout_height="match_parent">


    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:src="@drawable/drag_idle"
        android:layout_width="match_parent"
        android:id="@+id/end_game_anim"
        android:layout_height="300dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:id="@+id/game_stat"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="You Win!!!!"
        app:layout_constraintTop_toBottomOf="@id/end_game_anim"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:id="@+id/best_score"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="Your time is: 300 seconds"
        app:layout_constraintTop_toBottomOf="@id/game_stat"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/best_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/game_restart_button"
        app:cardBackgroundColor="@color/water">


        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:text="Play Again!"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            />
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>